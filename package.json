{
  "name": "@mmmlib/globe-wc",
  "version": "0.1.1",
  "description": "A ThreeJS-based 3D globe web component for visualizing geopolitical data. Part of the MMM/ThinkerToys ecosystem.",
  "main": "dist/globe-wc.js",
  "module": "src/globe-wc.js",
  "type": "module",
  "files": [
    "dist/",
    "src/",
    "index.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:minify",
    "build:minify": "terser src/globe-wc.js -o dist/globe-wc.min.js --compress --mangle",
    "dev": "npx http-server . -p 8002 -c-1",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
