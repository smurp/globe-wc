    "geography",
    "countries",
    "mmm",
    "thinkertoys",
    "custom-elements"
  ],
  "author": "smurp",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/smurp/globe-wc/issues"
  },
  "homepage": "https://github.com/smurp/globe-wc#readme",
  "devDependencies": {
    "terser": "^5.19.0"
  },
  "peerDependencies": {
    "three": "^0.128.0"
